
<div class="navmenu">
    <input type="checkbox" title="Menu expand/collapse toggle" id="navmenu-toggle" class="navmenu-icon" />
    <label for="navmenu-toggle" class="navmenu-icon"><FluentIcon Value="@(new Icons.Regular.Size20.Navigation())" Color="Color.Fill" /></label>
    <nav class="sitenav" aria-labelledby="main-menu" onclick="document.getElementById('navmenu-toggle').click();">
        <FluentNavMenu Id="main-menu" Width="250" Collapsible="true" Title="Navigation menu" @bind-Expanded="expanded">
            <FluentNavLink Href="/" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.Home())" IconColor="Color.Accent">Home</FluentNavLink>
            <FluentNavLink Href="booklist" Icon="@(new Icons.Regular.Size20.BookAdd())" IconColor="Color.Accent">Book List</FluentNavLink>
            <FluentNavLink Href="authorlist" Icon="@(new Icons.Regular.Size20.PersonAdd())" IconColor="Color.Accent">Author List</FluentNavLink>
            <FluentNavLink Href="patronList" Icon="@(new Icons.Regular.Size20.ShieldPersonAdd())" IconColor="Color.Accent">Patron List</FluentNavLink>
            <FluentNavLink Href="publisherList" Icon="@(new Icons.Regular.Size20.HomeAdd())" IconColor="Color.Accent">Publisher List</FluentNavLink>
            <FluentNavLink Href="transactionList" Icon="@(new Icons.Regular.Size20.ReceiptAdd())" IconColor="Color.Accent">Transaction List</FluentNavLink>
        </FluentNavMenu>
    </nav>
</div>

@code {
    private bool expanded = true;

}